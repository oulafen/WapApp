-# coding: utf-8
%link(rel="stylesheet" type="text/css" href="css/topic_detail_page.css")
%header
  %p 吐槽
  .header-left(ng-tap="go_back()")
    .btn-style.back-btn
.wrapper#wrapper.no-footer
  .topic-detail-container.scrollable
    .topic-main-content
      .topic-title
        {{topic.title}}
      .topic-owner-icon(style="width:15%")
        %img(ng-src="{{topic.owner.logo || 'img/default_logo_user.png'}}")
      .text-container
        .owner-info
          .topic-owner
            %p.no-margin
              {{topic.owner.nickname}}
          .topic-created-at
            %p.no-margin
              {{parse_date(topic.created_at)}}
        .topic-body-detail(style="margin-left=10px;" )
          {{topic.body}}
        .replies-num
          %p
            {{topic.total_replies_num}}
    .border
    .reply(ng-repeat="reply in replies")
      .topic-owner-icon
        %img(ng-src="{{reply.replier.logo||'img/default_logo_user.png'}}")
      .text-container
        .owner-info
          .topic-owner
            %p.no-margin
              {{reply.replier.nickname}}
          .topic-created-at
            %p.no-margin
              {{parse_date(reply.created_at)}}
        .topic-body-detail(style="margin-left=10px;" )
          {{reply.reply_body}}
    .border-bottom
    %form.new-topic-form
      %ng-custom-textrea.input-full(placeholder="回复帖子" ng-model="reply_body")
      %p(class="label-warning" ng-show="has_err") 请填写完整
      %a.btn-style.btn-2(ng-click="sub_reply()")
        %img(src="img/register_white.png" style="height:14px;width:14px;margin-top:-2px;")
        回帖