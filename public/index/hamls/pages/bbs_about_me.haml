-# coding: utf-8
%link(rel="stylesheet" type="text/css" href="css/bbs_page.css")
%header
  %p 我的吐槽
  .header-left(ng-tap="go_back()")
    .btn-style.back-btn
.wrapper#wrapper.scrollable.height-full
  %img.block-background(src="img/madajiasijia.png")
  .topic(ng-repeat="topic in topics|orderBy:-id" ng-click='go_to_detail(topic.id)')
    .topic-content
      .topic-title
        {{topic.title}}
      .topic-body
        %p
          {{topic.body}}
    .topic-info
      .topic-owner
        %p.gray.no-margin
          {{topic.owner.nickname}}
      .last-replier
        %p.gray.no-margin
          {{topic.last_replier.nickname}}
      .last-replier-time
        %p.gray.no-margin
          {{parse_date(topic)}}
      .all-replies
        %p.gray.no-margin
          {{topic.total_replies}}
  .btn-style.paginate-btn.left(ng-show="current_page>1" ng-tap="go_pre_page()")
    %p 上一页
  .btn-style.paginate-btn.right(ng-show="current_page<total_pages" ng-tap="go_next_page()")
    %p 下一页